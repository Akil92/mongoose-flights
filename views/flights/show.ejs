<%- include('../partials/header') %>


<section id="show-page">
  <div>Airline:  <%= flight.airline %></div>
  <div>Airport:  <%= flight.airport %></div>
  <div>Flight No.  <%= flight.flightNo %></div>
  <div>Departs:  <%= flight.departs %></div>
  <form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/departs">
    <label> Destination:
    <select name="airport">
      <option value="HNL">HNL</option>
      <option value="SJU">SJU</option>
      <option value="CUN">CUN</option>
      <option value="SST">SST</option>
    </select>
    <input name="arrival" type="datetime-local">
    <button type="submit">Add Destination</button>
    </label>
  </form>
  <div id="destination">
      <div> <% flight.destination.forEach(function(des){ %> </div>
      <div> <span> Des. Airport: </span> <%= des.airport %> </div>
      <div> <span> Des. Date: </span> <%= des.arrival %> </div>
      <div> <% }) %> </div>
  </div>
  <label> Create Ticket: </label>
  <form id="add-ticket-form" method="POST" action="/tickets/<%= flight._id %>/new">
    <label> Seat
    <input name="seat" type="string">
  </label>
    <label> Price
    <input name ="price" type="number">
  </label>
  <button type="submit"> Add Ticket</button>
  <div>Tickets:</div>
  <section id="ticket">
    <div> <% tickets.forEach(function(ticket) { %> </div>
    <div> <span> Seat:</span>  <%= ticket.seat %> </div>
    <div> <span> Price: </span> <%= ticket.price %> </div>
    <div> <% }) %> </div>
    </section>
  
  
</section>

<%- include('../partials/footer') %> 